# ETH Indexer RS Configuration

# Database Settings
DATABASE_URL=sqlite:./data/indexer.db

# Network Endpoints
ETH_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
BEACON_RPC_URL=http://localhost:5052

# API Server Settings
API_PORT=3000

# Block Processing Configuration
START_BLOCK=-1
WORKER_POOL_SIZE=10
BLOCK_FETCH_INTERVAL_SECONDS=3
BLOCK_QUEUE_SIZE_MULTIPLIER=2

# Worker Pool & Concurrency Control
MAX_CONCURRENT_BLOCKS=5
MAX_CONCURRENT_TX_RECEIPTS=20

# RPC Rate Limiting (intervals in milliseconds)
ETH_RPC_MIN_INTERVAL_MS=200
BEACON_RPC_MIN_INTERVAL_MS=200

# RPC Concurrency Control
ETH_RPC_MAX_CONCURRENT=5
BEACON_RPC_MAX_CONCURRENT=3

# Processing Intervals & Timing
SYNC_DELAY_SECONDS=1

# Worker Configuration
WORKER_TIMEOUT_SECONDS=30

# Token Service Configuration
TOKEN_BALANCE_UPDATE_INTERVAL_MS=10
TOKEN_REFRESH_INTERVAL_MS=50

# Logging Configuration
LOG_LEVEL=info

# External Services (Optional)
BIGQUERY_SERVICE_ACCOUNT_PATH=./path/to/service-account.json

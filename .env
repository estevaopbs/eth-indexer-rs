# ETH Indexer RS Configuration

# Database connection string
DATABASE_URL=sqlite:./data/indexer.db

# Ethereum RPC URL (replace with your own endpoint)
ETH_RPC_URL=https://ethereum-rpc.publicnode.com/aa12eb12e6f9818dfe7ce07e9b9f04abfc17610a8d9ecd160c5143db815d4a32

# Beacon Chain API URL (required for consensus layer data)
BEACON_RPC_URL=https://ethereum-beacon-api.publicnode.com/5e17960e76a2254d9e10757516e61081e5314f7e0c01279651621a5e889f0a6f

# API server port
API_PORT=3000

# Starting block number (optional, defaults to 0)
START_BLOCK=-1

# Maximum concurrent RPC requests (otimizado para 1 bloco/3s)
MAX_CONCURRENT_REQUESTS=20

# Number of blocks to process in a batch (reduzido para melhor latÃªncia)
BLOCKS_PER_BATCH=32

# Log level: trace, debug, info, warn, error
LOG_LEVEL=info

# Google BigQuery Service Account JSON file path (for historical transaction data)
BIGQUERY_SERVICE_ACCOUNT_PATH=./neon-effect-465721-e4-0e83bf1cbbb2.json

# Database optimization settings (aumentado para melhor batch)
DB_BATCH_SIZE=500

# Reduce sync delay for faster processing (otimizado para alta velocidade)
SYNC_DELAY_SECONDS=0

# Block fetcher polling interval in seconds (how often to check for new blocks)
BLOCK_FETCH_INTERVAL_SECONDS=3

# Disable beacon chain data for faster processing (optional)
SKIP_BEACON_DATA=true
